<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kikisnight.colmenarviejotourguide.MainActivity"
    android:background="@color/app_background">

    <!-- SightseeingActivity category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FrameworkStyle"
        android:layout_marginTop="@dimen/framework_side_margin"
        android:background="@drawable/rounded_shape">
        <TextView
            android:id="@+id/sightseeing"
            style="@style/CategoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/category_sightseeing"/>
    </FrameLayout>

    <!-- Green Zones category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FrameworkStyle"
        android:background="@drawable/rounded_shape">
        <TextView
            android:id="@+id/greenZones"
            style="@style/CategoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/category_green_zones" />
    </FrameLayout>

    <!-- Bar & Pubs category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FrameworkStyle"
        android:background="@drawable/rounded_shape">
        <TextView
            android:id="@+id/restaurants"
            style="@style/CategoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/category_restaurants" />
    </FrameLayout>

    <!-- Council category -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FrameworkStyle"
        android:background="@drawable/rounded_shape">
        <TextView
            android:id="@+id/council"
            style="@style/CategoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/category_council" />
    </FrameLayout>
</LinearLayout>